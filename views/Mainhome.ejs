<script>
window.addEventListener("unload", function() {
    document.querySelector(".mainhome").classList.add("animate-out");
    document.querySelectorAll("h1, h2, button[type='submit']").forEach(function(element) {
        element.classList.add("animate-out");
    });
});
</script>
</html>